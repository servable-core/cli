{
  "name": "@servable/cli",
  "type": "module",
  "version": "0.0.0-development",
  "description": "",
  "author": {
    "name": "Servable",
    "email": "servablecommunity@gmail.com"
  },
  "license": "MIT",
  "bin": {
    "servable": "src/app.js"
  },
  "source": "src/app.js",
  "exports": {
    "require": "./dist/app.cjs",
    "default": "./dist/app.modern.js"
  },
  "main": "./dist/app.modern.js",
  "module": "./dist/app.module.js",
  "unpkg": "./dist/app.umd.js",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch --no-compress --format modern,cjs",
    "test_": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release",
    "acp": "git add . && npm run commit && git push",
    "commit": "git-cz",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare_": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint ."
  },
  "files": [
    "dist",
    "src",
    ".env"
  ],
  "engines": {
    "node": ">=10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/servable-core/cli"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "600 KB"
    },
    {
      "path": "dist/index.modern.js",
      "limit": "600 KB"
    },
    {
      "path": "dist/index.umd.js",
      "limit": "600 KB"
    }
  ],
  "keywords": [],
  "dependencies": {
    "@clinext/chunks-extension": "^1.1.0",
    "@clinext/sdk": "^2.4.1",
    "@servable/tools": "^1.0.1",
    "axios": "^1.6.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.0.1",
    "get-port": "^7.0.0",
    "glob": "^10.3.10",
    "glob-fs": "^0.1.7",
    "netrc": "^0.1.4"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^6.0.0",
    "javascript-obfuscator": "^4.0.0",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "semantic-release": "^22",
    "size-limit": "^4.10.2"
  }
}